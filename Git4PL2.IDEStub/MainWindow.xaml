<Window x:Class="Git4PL2.IDEStub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Git4PL2.IDEStub"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="MainWindow">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="200"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Button x:Name="ButtonSettings" Content="Settings" Click="ButtonSettings_Click"/>
            <Button x:Name="ButtonTeamCoding" Content="TeamCoding" Click="ButtonTeamCoding_Click"/>
        </StackPanel>
    </Grid>
</Window>
